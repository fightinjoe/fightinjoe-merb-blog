!!!
%html
  %head
    %meta{ :'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8" }/
    %title Aaron Wheeler : Fightinjoe.com
    %script{ :type => "text/javascript", :src => "/javascripts/jquery.js" }
    %script{ :type => "text/javascript", :src => "/javascripts/chili-1.7.pack.js" }
    %script{ :type => "text/javascript", :src => "/javascripts/jquery.easing.js" }
    %script{ :type => "text/javascript", :src => "/javascripts/jquery.accordion.js" }
    %script{ :type => "text/javascript", :src => "/javascripts/application.js" }
    %link{ :href => "/stylesheets/rice.css", :rel => "stylesheet", :type => "text/css" }/
    %link{ :href => "/feed/atom.xml", :rel => "alternate", :type => "application/atom+xml" }/
  %body
    %h1
      %a{:href => "/"} Aaron Wheeler : 
    #shell
      #wrapper
        #header
        #content
          = catch_content :for_layout
        #sidebar
          .wrapper
            #pic
            %h3#photos
              %a{ :href => 'http://www.flickr.com/photos/fightinjoe' } Photos
            %h3#albums
              %a{ :href => '/contact' } Contact
            %h3#previously Previously
            %ul#previous
              %li
                - for category in Category.all
                  %strong= category.title
                  %ul
                    - for blog in Blog.all( :limit => 10, :category_id => category.id, :order => 'created_at DESC' )
                      %li
                        %a{:href => "#{ url(:blog_by_date, blog) }"}= blog.title
                    - if Blog.count > 10
                      %li
                        %a{:href => "#{ url(:blogs) }"} Read more...

        #footer

    // %script{ :src => "http://www.google-analytics.com/urchin.js", :type => "text/javascript" }
    // %script{ :type => "text/javascript" } _uacct="UA-257048-1"; urchinTracker();
    %script{ :type => 'text/javascript', :src => 'http://static.getclicky.com/27444.js' }
    %script{ :type => "text/javascript" }
      jQuery('#previous li').accordion({ header: 'strong', autoheight: false });
      load_flickr_photo();